<div> <%= link_to "Sign Up", new_user_url %> </div>

<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>

<div> 
	<%= link_to "Add a Restaurant", new_restaurant_url %> 
	<%= link_to "Edit", edit_restaurant_path(restaurant) %>,
	<%= link_to "Delete", restaurant, method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
</div>

	<p> <%= restaurant.name %>, 
		<%= restaurant.location %>,
		<%= restaurant.description %>.
		<%= link_to "Show", restaurant_path(restaurant) %>
	</p>

<% end %>